#search_results
 float right
 width 70%
 thema_blue_results_background()

#footer-wrap
 fixed(bottom left)
 width 100%
 
#footer-container
 height 24px
 thema_blue_special_container()
 
#footer
 width $conteiner_width
 margin 0 auto
 position relative

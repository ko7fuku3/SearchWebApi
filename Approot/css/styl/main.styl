@import "nib"
@import "color_thema.styl"
@charset"utf-8";

$conteiner_width = 100%

body
 margin 0
 padding 0
 thema_blue_color()
 thema_blue_body()
 
ul,
ol
 margin 0

#header-wrap
 fixed(top left)
 width 100%

#header-container
 height 34px
 thema_blue_special_container()

#header
 width $conteiner_width
 margin 0 auto
 position relative

#search_types
 margin-left 10px
 display inline

.search-query
 border-radius(4px)
 
.navbar-inverse .navbar-inner
 background transparent
 border none

#container
 margin 0 auto
 overflow auto
 padding-top 35px
 padding-bottom 25px
 
#history
 float left
 width 30%
 thema_blue_body()
 thema_blue_sidebar_color()
 
#history_title
 thema_blue_sidebar_hover()
 height: 23px;
 padding: 4px;
 
.history
 thema_blue_sidebar_border()
 padding 9px 4px

.history:hover
 thema_blue_sidebar_hover()

.history .btn_delete
 visibility hidden

.history:hover .btn_delete
 visibility visible

.history
  clearfix()
 
#history_list li
 list-style-type none
 float left

.history_buttons
 float right !important

